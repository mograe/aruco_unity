{
  "version": 6,
  "configurePresets": [
    {
      "name": "win-android-arm64-debug",
      "displayName": "Android arm64 Debug (Quest) on Windows",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-win-android-arm64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK}/build/cmake/android.toolchain.cmake",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM": "android-29",
        "ANDROID_STL": "c++_shared",

        "OpenCV_DIR": "C:/path/to/opencv-android-sdk/sdk/native/jni",
        "OpenCV_ANDROID_SO_DIR": "C:/path/to/opencv-android-sdk/sdk/native/libs/arm64-v8a"
      }
    },
    {
      "name": "win-android-arm64-release",
      "displayName": "Android arm64 Release (Quest) on Windows",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-win-android-arm64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK}/build/cmake/android.toolchain.cmake",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM": "android-29",
        "ANDROID_STL": "c++_shared",

        "OpenCV_DIR": "$env{HOME}/build-opencv-arm64/install/sdk/native/jni",
        "OpenCV_ANDROID_SO_DIR": "$env{HOME}/build-opencv-arm64/installsdk/native/libs/arm64-v8a"
      }
    }
  ],
  "buildPresets": [
    { "name": "win-android-arm64-debug", "configurePreset": "win-android-arm64-debug", "jobs": 8 },
    { "name": "win-android-arm64-release", "configurePreset": "win-android-arm64-release", "jobs": 8 }
  ]
}
